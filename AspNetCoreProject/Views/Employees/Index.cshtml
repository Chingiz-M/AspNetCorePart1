@model List<AspNetCoreProject.Models.Employee>

<div class="container">
    <p>
        <a asp-action="Create" class="btn"> Создать</a>
    </p>

    @if (Model.Any()) 
    {
        <table class="table">
            <caption><b>Сотрудники</b></caption>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Возраст</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    if (employee.Age == 32)
                    {
                        int a = 0;
                    }
                    <tr>
                        <td>@employee.Id</td>
                        <td>@employee.Lastname</td>
                        <td>@employee.Name</td>
                        <td>@employee.Surname</td>
                        <td>@employee.Age</td>
                        <td>
                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id">info</a>
                            <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">|edit</a>
                            <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id">|delete</a>
                            <form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
                                <input type="submit" value="Delete" class="btn btn-danger" /> |
                            </form>
                        </td>
                    </tr>
                }
            <tbody>

        </table>
    }
    else
    {
        <p>Сотрудников нет</p>
    }
    <p>
        <a asp-controller="home" asp-action="index">Home</a>
    </p>
</div>